<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.lenovo.spur.Sp_Signup">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Enter email"
        android:textColor="#fff"
        android:layout_centerInParent="true"
        android:id="@+id/email_txt"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:background="@drawable/rounded_rectangle"
        android:paddingLeft="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Create password"
        android:textColor="#fff"
        android:layout_below="@+id/email_txt"
        android:layout_centerInParent="true"
        android:id="@+id/password_txt"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_rectangle"
        android:paddingLeft="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Confirm password"
        android:textColor="#fff"
        android:layout_below="@+id/password_txt"
        android:id="@+id/confirm_password_txt"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_rectangle"
        android:paddingLeft="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@drawable/gradient"
        android:layout_below="@id/confirm_password_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="submit_sp"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lenovo.spur.MainActivity"
    android:background="@drawable/gradient"
    android:padding="20dp"
    >



   <ViewFlipper
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:id="@+id/flipper">

       <de.hdodenhof.circleimageview.CircleImageView
           xmlns:app="http://schemas.android.com/apk/res-auto"
           android:id="@+id/logo1"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/logo1"
           app:civ_border_width="2dp"
           app:civ_border_color="#FF000000"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
          />
       <de.hdodenhof.circleimageview.CircleImageView
           xmlns:app="http://schemas.android.com/apk/res-auto"
           android:id="@+id/logo2"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/logo2"
           app:civ_border_width="2dp"
           app:civ_border_color="#FF000000"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           />

       <de.hdodenhof.circleimageview.CircleImageView
           xmlns:app="http://schemas.android.com/apk/res-auto"
           android:id="@+id/logo3"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/logo3"
           app:civ_border_width="2dp"
           app:civ_border_color="#FF000000"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           />

       <de.hdodenhof.circleimageview.CircleImageView
           xmlns:app="http://schemas.android.com/apk/res-auto"
           android:id="@+id/logo4"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/logo4"
           app:civ_border_width="2dp"
           app:civ_border_color="#FF000000"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           />

       <de.hdodenhof.circleimageview.CircleImageView
           xmlns:app="http://schemas.android.com/apk/res-auto"
           android:id="@+id/logo5"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/logo5"
           app:civ_border_width="2dp"
           app:civ_border_color="#FF000000"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           />

       <de.hdodenhof.circleimageview.CircleImageView
           xmlns:app="http://schemas.android.com/apk/res-auto"
           android:id="@+id/logo6"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/logo6"
           app:civ_border_width="2dp"
           app:civ_border_color="#FF000000"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           />

       <de.hdodenhof.circleimageview.CircleImageView
           xmlns:app="http://schemas.android.com/apk/res-auto"
           android:id="@+id/logo7"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/logo7"
           app:civ_border_width="2dp"
           app:civ_border_color="#FF000000"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           />

       <de.hdodenhof.circleimageview.CircleImageView
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:id="@+id/logo8"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:src="@drawable/logo8"
       app:civ_border_width="2dp"
       app:civ_border_color="#FF000000"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="10dp"
       />





   </ViewFlipper>

    <TextView
        android:id="@+id/spur_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flipper"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:text="SPUR"
        android:textColor="#000"
        android:textSize="40dp"
        android:textStyle="italic" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="SIGNUP"
        android:id="@+id/signup_btn"
        android:textStyle="italic"
        android:textSize="20dp"
        android:onClick="click_signup"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_above="@+id/signup_btn"
        android:textStyle="italic"
        android:textSize="20dp"
        android:id="@+id/login_btn"
        android:onClick="login_btn"

        />




</RelativeLayout>
